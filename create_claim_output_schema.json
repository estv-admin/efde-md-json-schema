{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "create_claim_output_schema.json",
    "type": "object",
    "description": "Schema eF85 MD New Claim Output",
    "additionalProperties": false,
    "properties": {
        "success": {
            "description": "Result of the operation",
            "type": "boolean"
        },
        "claimID": {
            "type": "string",
            "description": "ID of the newly created claim - only present if 'success' property is true"
        },
        "error": {
            "type": "array",
            "items": {
                "$ref": "https://github.com/estv-admin/efde-md-json-schema/error_types_schema.json#/definitions/OutputErrorType"
            }
        }
    },
    "if": {
        "properties": { "success": { "const": false } }
    },
    "then": {
        "required": [
            "success",
            "error"
        ]
    },
    "else": {
        "required": [
            "success",
            "claimID"
        ]
    }
}